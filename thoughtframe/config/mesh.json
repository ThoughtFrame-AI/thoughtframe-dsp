{
  "sources": [
    {
      "id": "mic1",
      "type": "ffmpeg",
      "cmd": [
        "ffmpeg",
        "-i",
        "samples/OneDayHydrophone.flac",
        "-ac",
        "1",
        "-ar",
        "48000",
        "-f",
        "f32le",
        "-"
      ],
      "fs": 48000,
      "chunk_size": 4096
    }
  ],

  "arrays": [
    {
      "id": "towed_array",
      "inputs": ["mic1"],
      "geometry": {
        "spacing_m": 0.5,
        "sound_speed": 1500
